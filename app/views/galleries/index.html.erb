<div class="page-header">
  <%= link_to new_gallery_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Gallery
  <% end if can? :create, Gallery %>
  <h1>Listing galleries</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <% if can? :update, Gallery %>
      <th></th>
      <% end %>
      <% if can? :destroy, Gallery %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
<% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= link_to 'Show', gallery %></td>
      <% if can? :update, gallery %>
      <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
      <% end %>
      <% if can? :destroy, gallery %>
      <td>
        <%= link_to gallery, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span> Destroy
        <% end %>
      </td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>

