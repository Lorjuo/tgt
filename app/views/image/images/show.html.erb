<% content_for :title do %>
  <%= t ".title", :name => resource.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to collection_url, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, resource %>
    <%= link_to edit_resource_url, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box">
  <p><%= link_to(image_tag(resource.file_url(:thumb)), resource.file_url) if resource.file.thumb.present? %></p>

  <dl class="dl-horizontal">
    <dt><%= Image.human_attribute_name(:name) %>:</dt>
    <dd><%= resource.name %></dd>

    <dt><%= Image.human_attribute_name(:path) %>:</dt>
    <dd><%= resource.file %></dd>

  </dl>
</div>