<div class="window box">
  <p><%= link_to(image_tag(@image.file_url(:cropped)), @image.file_url) if @image.file.cropped.present? %></p>

  <dl class="dl-horizontal">
    <dt><%= Image.human_attribute_name(:name) %>:</dt>
    <dd><%= @image.name %></dd>

    <dt><%= Image.human_attribute_name(:path) %>:</dt>
    <dd><%= @image.file %></dd>

  </dl>
</div>
