      <%= image_tag 'tgt-logo.png', :id => 'tgt-logo' %>
      <%= link_to "/", :class => "navbar-brand" do %>
        TG Traisa
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <%= just_tree NavigationElement.top_level %>
      </ul>
