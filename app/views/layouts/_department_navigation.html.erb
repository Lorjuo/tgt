<div class="window navigation-bar blue">
    
  <div class="navigation-header">
    <button class="navigation-bar-toggle">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to @department.name, @department, :class => "navigation-brand" %>
  </div>

  <div class="navigation-collapse">
    <ul class="navigation right">
      <% navigation_elements = NavigationElement.department(@department.id).roots %>
      <% cache(['department_navigation', cache_key_for(navigation_elements)], skip_digest: true) do %>
        <%= render :partial => "layouts/simple_navigation", collection: navigation_elements, :as => :navigation_element %>
      <% end %>
    </ul>
    <% if can? :update, @department %>
      <ul class="navigation left">
        <li>
          <%= link_to "#" do %>
            <%= fa_icon "key" %>
            Verwaltung<% end %><%# Prevent whitespaces here %>
          <ul>
            <li><%= link_to Page.model_name.human(:count => :lots), pages_path %></li>
            <li><%= link_to t("general.navigation"), department_navigation_elements_path(@department) %>
              <ul>
                <li><%= link_to "Anordnung", sort_navigation_elements_department_path(@department) %>
              </ul>
            </li>
            <li><%= link_to Document.model_name.human(:count => :lots), department_documents_path(@department) %>
            <li><%= link_to Department.model_name.human, edit_department_path(@department) %>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
</div>