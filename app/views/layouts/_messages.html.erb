
<% flash.each do |name, msg| %>
  <%= content_tag :div, :class => "alert alert-#{ name == :notice || name == :success ? "success" : "danger" } alert-dismissable" do %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= msg %>
  <% end %>
<% end %>
