<div class="" id="header">
  <div class="row">
    <div class="col-md-5 left">
      <%= link_to root_path do %>
        <%= image_tag "tgt-logo.png" %>
      <% end %>
      <div id="title">
        <h4><%= APP_CONFIG['header']['title'] %></h4>
        <h4><%= APP_CONFIG['header']['subtitle'] %></h4>
      </div>
    </div>
    <div class="col-md-4 middle">
      <%#= image_tag "leichtathletik.png" %>
    </div>
    <div class="col-md-3">
      <form action="<%= messages_path %>">
        <div class="input-group">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
          <input type="text" name="search_term" class="form-control" placeholder="<%= t("general.search_term") %>">
        </div>
      </form>
    </div>
  </div>
</div>
