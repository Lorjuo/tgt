<%= simple_fields_for @navigation_element || 'navigation_element' do |f| %>
  <% unless @controller.nil? %>
    <%= f.input :action_id, label: t("activerecord.attributes.navigation_element.action_id") do %>
      <%= f.select("action_id", @actions, {:include_blank => true}, :class => 'form-control') %>
    <% end %>

    <%= f.input :instance_id, label: t("activerecord.attributes.navigation_element.instance_id") do %>
      <%= f.select("instance_id", @instances, {:include_blank => true}, :class => 'form-control') %>
    <% end %>
  <% end %>
<% end %>