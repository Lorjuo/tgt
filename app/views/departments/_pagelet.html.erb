<div class="window">
  <div class="box">
    <h4>Mehr Infos</h4>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#trainingGroups" data-toggle="tab" class="title">
        <%= fa_icon "users" %>
        <%= TrainingGroup.model_name.human(:count => :lots) %>
      </a></li>
      <li><a href="#trainers" data-toggle="tab" class="title">
        <%= Trainer.model_name.human(:count => :lots) %>
      </a></li>
      <li><a href="#messages" data-toggle="tab" class="title">
        <%= fa_icon "message" %>
        <%= Message.model_name.human(:count => :lots) %>
      </a></li>
      <li><a href="#galleries" data-toggle="tab" class="title">
        <%= Gallery.model_name.human(:count => :lots) %>
      </a></li>
      <li><a href="#flyers" data-toggle="tab" class="title">
        <%= Department.human_attribute_name(:flyers) %>
      </a></li>
    </ul>
  </div>

  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane fade active in" id="trainingGroups">
      <div class="plain"><div class="row">
        <% training_groups = @department.training_groups.current.includes(:image).chronological %>
        <% cache([:media, cache_key_for(training_groups)], skip_digest: true) do %>
          <%= render training_groups %>
        <% end %>
      </div></div>
    </div>
    <div class="tab-pane fade" id="trainers">
      <div class="plain"><div class="row">
        <% trainers = @department.trainers.includes(:image).alphabetical %>
        <% cache([:media, cache_key_for(trainers)], skip_digest: true) do %>
          <%= render trainers %>
        <% end %>
      </div></div>
    </div>
    <div class="tab-pane fade" id="messages">
      <% messages = @department.messages.includes(:image).chronological.limit(4) %>
      <% cache([:excerpts_large, cache_key_for(messages)], skip_digest: true) do %>
        <%= render :partial => 'messages/message_excerpt', :collection => messages, :as => :message, :locals => { :size => :large } %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="galleries">
      <div class="plain"><div class="row">
        <%= render(:partial => 'galleries/gallery', :collection => @department.galleries.chronological, :as => 'gallery') %>
      </div></div>
    </div>
    <div class="tab-pane fade" id="flyers">
      <div class="plain"><div class="row">
        <%= render(:partial => 'documents/document', :collection => @department.flyers.chronological, :as => 'document') %>
      </div></div>
    </div>
  </div>
  
</div>