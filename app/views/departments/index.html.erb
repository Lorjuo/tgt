<div class="page-header">
  <%= link_to new_department_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Department
  <% end if can? :create, Department %>
  <h1>Listing departments</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <% if can? :update, Department %>
      <th></th>
      <% end %>
      <% if can? :destroy, Department %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
<% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= link_to 'Show', department %></td>
      <% if can? :update, department %>
      <td><%= link_to 'Edit', edit_department_path(department) %></td>
      <% end %>
      <% if can? :destroy, department %>
      <td>
        <%= link_to department, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span> Destroy
        <% end %>
      </td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>
