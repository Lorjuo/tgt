<% content_for :title do %>
  <%= t('.images', :model => Department.model_name.human ) %>
<% end %>

<% content_for :buttons do %>
  <%= link_to departments_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <%= link_to @department, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    <%= t "general.show" %>
  <% end %>
  <%= link_to [@department, :action => :edit], :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-edit"></span>
    <%= t "general.edit" %>
  <% end %>
<% end %>

<div class="window box">

  <h3>Banner</h3>
  <%= simple_form_for(@department) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.simple_fields_for :banner do |image_form| %>
        <%#= image_form.input :file, :as => :file %>
        <%= render 'images/image_selector', f:image_form, image:@department.banner %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
