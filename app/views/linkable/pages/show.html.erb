<% content_for :title do %>
  <%= t ".title", :name => @linkable.link.name %>
<% end %>

<% content_for :buttons do %>
  <% if can? :update, @linkable %>
    <%= link_to department_links_path(@department), :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      <%= t "general.list" %>
    <% end %>
    <%= link_to [:edit, @linkable], :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box min-height">
  <%= raw @linkable.content %>
</div>

<% content_for :sidebar do %>
  <% if @linkable.references.present? %>
    <div class="window box">
      <h5>
        <span class="glyphicon glyphicon-link"></span>
        <%= t "general.references" %>
      </h5>
      <%= render :partial => "shared/references_to", :locals => { references: @linkable.references } %>
    </div>
  <% end %>
<% end %>
