<%= simple_fields_for @media_link || 'media_link' do |f| %>
  <% unless @controller.nil? %>
    <%= f.input :action_id, label: t("activerecord.attributes.navigation_element.action_id") do %>
      <%= f.select("action_id", @actions, {:include_blank => false}, :class => 'form-control') %>
    <% end %>
    <%= f.input :instance_id, label: t("activerecord.attributes.media_link.instance_id") do %>
      <%= f.select("instance_id", @instances, {:include_blank => false}, :class => 'form-control') %>
    <% end %>
  <% end %>
<% end %>