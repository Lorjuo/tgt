<% content_for :title do %>
  <%= t ".title", :name => @linkable.link.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to department_links_path(@department), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, @linkable %>
    <%= link_to [:edit, @linkable], :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box">
  <dl class="dl-horizontal">
    <dt><%= Link.human_attribute_name("parent") %>:</dt>
    <dd><%= link_to @linkable.parent.name, @linkable.parent unless @linkable.link.root? %></dd>
    <dt><%= Link.human_attribute_name("active") %>:</dt>
    <dd><%= t @linkable.active.to_s %></dd>
    <hr />
    <dt><%= MediaLink.human_attribute_name("controller_id") %>:</dt>
    <dd><%= @linkable.controller_id %></dd>

    <dt><%= MediaLink.human_attribute_name("instance_id") %>:</dt>
    <dd><%= @linkable.instance_id %></dd>

  </dl>
</div>