<% content_for :title do %>
  <%= t('.images', :model => Message.model_name.human ) %>
<% end %>

<% content_for :buttons do %>
  <%= link_to department_messages_path(@message.department), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <%= link_to @message, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    <%= t "general.show" %>
  <% end %>
  <%= link_to [@message, :action => :edit], :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-edit"></span>
    <%= t "general.edit" %>
  <% end %>
<% end %>

<div class="window box">
  <h3>Thumbnail</h3>
  <%= simple_form_for(@message) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.simple_fields_for :thumb do |image_form| %>
        <%#= image_form.input :file, :as => :file %>
        <%= render 'images/image_selector', f:image_form, image:@message.thumb %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <hr />

  <h3>Header</h3>
  <%= simple_form_for(@message.header || @message.build_header) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%#= image_form.input :file, :as => :file %>
      <%= render 'images/image_selector', f:f, image:@message.header %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
