<div class="page-header">
  <%= link_to messages_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <% if can? :update, @message %>
    <%= link_to edit_message_path(@message), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      Edit
    <% end %>
  <% end %>
  <h1>Show message</h1>
</div>

<p><%= link_to(image_tag(@message.image.file_url(:thumb)), @message.image.file_url) if @message.image.present? %></p>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @message.title %></dd>

  <dt>Content:</dt>
  <dd><%= @message.content %></dd>

  <dt>Department:</dt>
  <dd><%= @message.department.name %></dd>

</dl>
