<% content_for :title do %>
  <%= t('general.edit_model', :model => Message.model_name.human ) %>
<% end %>

<% content_for :buttons do %>
  <%= link_to department_messages_path(@message.department), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <%= link_to @message, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    <%= t "general.show" %>
  <% end %>
  <%= link_to [@message, :action => :images], :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-picture"></span>
    <%= t "general.images" %>
  <% end if false %>
<% end %>

<%= render 'form' %>
