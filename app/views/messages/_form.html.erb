<%= render :partial => 'shared/tinymce' %>
<%= simple_form_for(@message, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :department %>
    <%= f.input :content, as: :text, input_html: { class: 'tinymce' }  %>

    <%= f.simple_fields_for :image do |image_form| %>
      <%# render 'training_unit_fields', f:image_form %>
      <%= image_form.input :file, :as => :file %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
