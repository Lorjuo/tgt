<%= simple_form_for(@training_unit, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :weekday %>
    <%= f.input :time_begin %>
    <%= f.input :time_end %>
    <%= f.input :location_summer_id %>
    <%= f.input :location_winter_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
