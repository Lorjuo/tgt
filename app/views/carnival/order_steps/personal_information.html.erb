<div class="window box">
  <%= simple_form_for(@order, :url => wizard_path, :method => :put) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.simple_fields_for :person do |person_form| %>
        <%= person_form.input :first_name %>
        <%= person_form.input :last_name %>
        <%= person_form.input :street %>
        <%= person_form.input :zip %>
        <%= person_form.input :city %>
        <%= person_form.input :email %>
        <%= person_form.input :phone %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
          <%= f.button :submit, 'Weiter', :class => "btn btn-primary" %>
      </div>
    </div>

    <%= link_to 'skip', next_wizard_path %>
    <%= link_to 'back', previous_wizard_path %>
  <% end %>
</div>
