<div class="window box">

  <h3>
    <span class="glyphicon glyphicon-user"></span>
    Personal Information
  </h3>

  <%= simple_form_for(@order, :url => wizard_path, :method => :put) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.simple_fields_for :person do |person_form| %>
        <%= person_form.input :first_name %>
        <%= person_form.input :last_name %>
        <%= person_form.input :street %>

        <%# http://stackoverflow.com/questions/9449481/multiple-inputs-on-a-single-line-with-twitter-bootstrap-and-simple-form-2-0 %>
        <%= person_form.input :city, label: 'City / Zip' do %>
          <div class="row">
            <div class="col-xs-3">
              <%= person_form.input_field :city %>
            </div>
            <div class="col-xs-9">
              <%= person_form.input_field :zip%>
            </div>
          </div>
        <% end %>

        <%= person_form.input :email %>
        <%= person_form.input :phone %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
          <%= f.button :submit, 'Weiter', :class => "btn btn-primary" %>
      </div>
    </div>

    <%= link_to 'skip', next_wizard_path %>
    <%= link_to 'back', previous_wizard_path %>
  <% end %>
</div>
