<div class="window box">
  <%= simple_form_for(@carnival_reservation) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :order_id %>
      <%= f.association :session,
          :as => :select,
          :collection => Carnival::Session.order(:name => :asc).order(:term => :asc),
          :label_method => :display,
          :value_method => :id,
          :include_blank => false,
          :input_html => { :class => "chosen"} %>
      <%= f.association :category,
          :as => :select,
          :collection => Carnival::Category.order(:name => :asc).order(:price => :asc),
          :label_method => :display,
          :value_method => :id,
          :include_blank => false,
          :input_html => { :class => "chosen"} %>
      <%= f.input :amount %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
          <%= f.button :submit, :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
