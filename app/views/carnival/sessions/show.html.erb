<% content_for :title do %>
  <%= t ".title", :name => @carnival_session.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to carnival_sessions_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, @carnival_session %>
    <%= link_to edit_carnival_session_path(@carnival_session), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box">
  <dl class="dl-horizontal">
    <dt><%= Carnival::Session.human_attribute_name("name") %>:</dt>
    <dd><%= @carnival_session.name %></dd>

    <dt><%= Carnival::Session.human_attribute_name("term") %>:</dt>
    <dd><%= @carnival_session.term %></dd>

  </dl>
</div>
