<% content_for :title do %>
  <%= t ".title" %>
<% end %>

<% content_for :buttons do %>
  <%= link_to new_short_route_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('general.create_model', :model => ShortRoute.model_name.human ) %>
  <% end if can? :create, ShortRoute %>
<% end %>

<div class="window box">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><%= ShortRoute.human_attribute_name("name") %></th>
        <th><%= ShortRoute.human_attribute_name("url") %></th>
        <th><%= ShortRoute.human_attribute_name("http_status") %></th>
        <th></th>
        <% if can? :update, ShortRoute %>
        <th></th>
        <% end %>
        <% if can? :destroy, ShortRoute %>
        <th></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
  <% @short_routes.each do |short_route| %>
      <tr>
        <td><%= short_route.name %></td>
        <td><%= link_to short_route.get_url, short_route.url if short_route.url.present? %></td>
        <td><%= short_route.http_status %></td>
        <td><%= link_to t('general.show'), short_route %></td>
        <% if can? :update, short_route %>
        <td><%= link_to t('general.edit'), edit_short_route_path(short_route) %></td>
        <% end %>
        <% if can? :destroy, short_route %>
        <td>
          <%= link_to short_route, method: :delete, data: { confirm: t('general.are_you_sure') } do %>
            <span class="glyphicon glyphicon-trash"></span>
            <%= t('general.destroy') %>
          <% end %>
        </td>
        <% end %>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>
