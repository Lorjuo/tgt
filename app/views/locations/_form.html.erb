<div class="window box">
  <%= simple_form_for(@location, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%#= f.input :latitude %>
      <%#= f.input :longitude %>
      <%= f.input :description %>

      <%= f.simple_fields_for :image do |image_form| %>
        <%#= image_form.input :file, :as => :file %>
        <%= render 'images/image_selector', f:image_form, image:@location.image, label: Image.model_name.human %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
