<% content_for :title do %>
  <%= t ".title", :name => @theme.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to themes_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, @theme %>
    <%= link_to edit_theme_path(@theme), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box">
  <dl class="dl-horizontal">
    <dt><%= Theme.human_attribute_name("name") %>:</dt>
    <dd><%= @theme.name %></dd>

    <dt><%= Theme.human_attribute_name("description") %>:</dt>
    <dd><%= @theme.description %></dd>

    <dt><%= Theme.human_attribute_name("color") %>:</dt>
    <dd style="color: <%= @theme.color %>; font-weight: bold"><%= @theme.color %></dd>

  </dl>
</div>
