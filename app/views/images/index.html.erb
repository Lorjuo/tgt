<div class="page-header">
  <%= link_to polymorphic_path([@parent, Image], :action => 'new'), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Image
  <% end if can? :create, Image %>
  <h1>Listing images</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <!--<th>File</th>-->
      <th></th>
      <% if can? :update, Image %>
      <th></th>
      <% end %>
      <% if can? :destroy, Image %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
<% @images.each do |image| %>
    <tr>
      <td>
        <%= link_to(image_tag(image.file_url(:thumb)), image.file_url) if image.file.thumb.present? %>
      </td>
      <td>
        <%= image.name %>
      </td>
      <!--<td><%= image.file %></td>-->
      <td><%= link_to 'Show', image %></td>
      <% if can? :update, image %>
      <td><%= link_to 'Edit', edit_image_path(image) %></td>
      <% end %>
      <% if can? :destroy, image %>
      <td>
        <%= link_to image, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span> Destroy
        <% end %>
      </td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>
