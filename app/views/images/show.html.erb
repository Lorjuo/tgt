<% content_for :title do %>
  <%= t ".title", :name => @image.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to polymorphic_path([@image.attachable, Image]), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, @image %>
    <%= link_to edit_image_path(@image), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<p><%= link_to(image_tag(@image.file_url(:thumb)), @image.file_url) if @image.file.thumb.present? %></p>

<dl class="dl-horizontal">
  <dt><%= Image.human_attribute_name(:name) %>:</dt>
  <dd><%= @image.name %></dd>

  <dt><%= Image.human_attribute_name(:path) %>:</dt>
  <dd><%= @image.file %></dd>

</dl>
