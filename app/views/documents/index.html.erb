<div class="page-header">
  <%= link_to new_document_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Document
  <% end if can? :create, Document %>
  <h1>Listing documents</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>File</th>
      <th></th>
      <% if can? :update, Document %>
      <th></th>
      <% end %>
      <% if can? :destroy, Document %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
<% @documents.each do |document| %>
    <tr>
      <td><%= document.name %></td>
      <td><%= document.file %></td>
      <td><%= link_to 'Show', document %></td>
      <% if can? :update, document %>
      <td><%= link_to 'Edit', edit_document_path(document) %></td>
      <% end %>
      <% if can? :destroy, document %>
      <td>
        <%= link_to document, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span> Destroy
        <% end %>
      </td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>
