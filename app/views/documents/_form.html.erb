<div class="window box">
  <%= simple_form_for(shallow_args(@department, @document), :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%#= f.input :file %>
      <%= render 'images/image_selector', f:f, image:@document %>
      <%#= f.association :department,
        :as => :select,
        :collection => Department.order(:name => :asc),
        :label_method => :name,
        :value_method => :id,
        :include_blank => false,
        :input_html => { :class => "chosen"} %>
    </div>


    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
