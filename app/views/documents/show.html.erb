<% content_for :title do %>
  <%= t ".title", :name => @document.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to documents_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, @document %>
    <%= link_to edit_document_path(@document), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box">
  <dl class="dl-horizontal">
    <dt><%= NavigationElement.human_attribute_name(:name) %>:</dt>
    <dd><%= @document.name %></dd>

    <dt><%= NavigationElement.human_attribute_name(:file) %>:</dt>
    <dd><%= @document.file %></dd>

  </dl>
</div>
