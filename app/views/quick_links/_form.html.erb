<%= simple_form_for(@quick_link) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :department_id %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
