<% content_for :title do %>
  <%= t ".title", :name => @quick_link.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to department_quick_links_path(@department), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= t "general.list" %>
  <% end %>
  <% if can? :update, @quick_link %>
    <%= link_to edit_quick_link_path(@quick_link), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      <%= t "general.edit" %>
    <% end %>
  <% end %>
<% end %>

<div class="window box">
  <dl class="dl-horizontal">
    <dt><%= QuickLink.human_attribute_name("name") %>:</dt>
    <dd><%= @quick_link.name %></dd>

    <dt><%= QuickLink.human_attribute_name("url") %>:</dt>
    <dd><%= link_to @quick_link.get_url, @quick_link.url if @quick_link.url.present? %></dd>

    <dt><%= QuickLink.human_attribute_name(:active) %></dt>
    <dd><%= t @quick_link.active.to_s %></dd>

  </dl>
</div>
