<div class="window box">
  <%= simple_form_for(shallow_args(@department, @event)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :term, :as => :date_picker %>
      <%= f.input :description %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.button :submit, t(@event.new_record? ? "general.create_model" : "general.edit_model", :model => @department.term_competition ), :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
