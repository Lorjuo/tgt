<div class="row equal">
  <div class="col-sm-8">
    <div class="window box">
      <h3>Sportabgebot</h3>
      <p>Zu unserem Sportangebot gelangen Sie hier</p>
    </div>
    <div class="window">
      <%= render :partial => 'messages/message_excerpt', :collection => @messages, :as => :message %>
    </div>
    <div class="window box">
      <h3>News Archiv</h3>
      <p><%= link_to "Hier", messages_path %> gelangen sie zu vergangenen Nachrichtigen in unserem Archiv</p>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="window">
      <%= render :partial => 'layouts/announcements' %>
    </div>
    <div class="window box">
      <h3>Photo Galleries</h3>
      <div class="row">
        <% Gallery.order(:updated_at => :desc).each do |gallery| %>
          <% image = gallery.get_preview_image %>
          <div class="col-sm-4 col-xs-6">
            <div class="thumbnail">
              <%= link_to(image.file_url, :class => 'fancybox', :rel => 'galleries', :caption => gallery.name) do %>
                <%= image_tag image.file_url(:_260x180), :class => "img-responsive" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>