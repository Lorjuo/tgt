<% content_for :title do %>
  <%= t ".title" %>
<% end %>

<% content_for :buttons do %>
  <%= link_to new_trainer_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('general.create_model', :model => Trainer.model_name.human ) %>
  <% end if can? :create, Trainer %>
<% end %>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= Trainer.human_attribute_name(:name) %></th>
      <th><%= Trainer.human_attribute_name(:birthday) %></th>
      <th><%= Trainer.human_attribute_name(:residence) %></th>
      <th><%= Trainer.human_attribute_name(:phone) %></th>
      <th><%= Trainer.human_attribute_name(:email) %></th>
      <!-- <th>Profession</th>
      <th>Education</th>
      <th>Disciplines</th>
      <th>Activities</th> -->
      <th></th>
      <% if can? :update, Trainer %>
      <th></th>
      <% end %>
      <% if can? :destroy, Trainer %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
<% @trainers.each do |trainer| %>
    <tr>
      <td><%= trainer.name %></td>
      <td><%= trainer.birthday %></td>
      <td><%= trainer.residence %></td>
      <td><%= trainer.phone %></td>
      <td><%= trainer.email %></td>
      <!-- <td><%= trainer.profession %></td>
      <td><%= trainer.education %></td>
      <td><%= trainer.disciplines %></td>
      <td><%= trainer.activities %></td> -->
      <td><%= link_to t('general.show'), trainer %></td>
      <% if can? :update, trainer %>
      <td><%= link_to t('general.edit'), edit_trainer_path(trainer) %></td>
      <% end %>
      <% if can? :destroy, trainer %>
      <td>
        <%= link_to trainer, method: :delete, data: { confirm: t('general.are_you_sure')} do %>
          <span class="glyphicon glyphicon-trash"></span>
          <%= t('general.destroy') %>
        <% end %>
      </td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>
