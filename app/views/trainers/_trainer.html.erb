<div class="col-md-3 col-sm-4 col-xs-6">
  <div class="image-wrapper">
    <div class="image">
      <%= link_to( trainer, :title => trainer.name ) do %>
        <%= image_tag(image_url(trainer.image, :_260x180), :class => "img-responsive") %>
      <% end %>
    </div>
    <div class="image-text">
      <%= link_to trainer, :class => "title" do %>
        <%= trainer.name %>
      <% end %>
    </div>
  </div>
</div>