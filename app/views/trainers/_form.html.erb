<%= render :partial => 'jquery_popup_uploader/utilities' %>

<div class="window box">
  <%= simple_form_for(@trainer, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
    <%= f.error_notification %>

    <%# Maybe split into columns %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :birthday, :as => :date_picker %>
      <%= f.association :training_groups,
        :as => :select,
        :collection => TrainingGroup.order(:name => :asc),
        :label_method => :name,
        :value_method => :id,
        :include_blank => false,
        :input_html => { :class => "chosen input-xlarge"} %>
      <%= f.input :residence %>
      <%= f.input :phone %>
      <%= f.input :email,
        :input_html => { :rows => "3"} %>
      <%= f.input :profession,
        :input_html => { :rows => "3"} %>
      <%= f.input :education,
        :input_html => { :rows => "3"} %>
      <%= f.input :disciplines,
        :input_html => { :rows => "3"} %>
      <%= f.input :activities,
        :input_html => { :rows => "3"} %>
      <%#= f.association :user,
        :collection => User.order('first_name' => :asc).order('last_name' => :asc),
        :label_method => :name,
        :value_method => :id,
        :input_html => { :class => "chosen" },
        :hint => t(".users_hint") %>

      <%= f.simple_fields_for :image do |image_form| %>
        <%#= image_form.input :file, :as => :file %>
        <%= render 'images/image_selector', f:image_form, image:@trainer.image %>
        <%#= image_form.input :file, as: :image_preview, input_html: {preview_version: :thumb}, :use_default_url => false %>
      <% end %>
      <%= f.input :image, as: :image_popup_upload, input_html: {}, preview_version: :thumb, preview_size: '180x180', :use_default_url => true, :mount_on => :file %>
