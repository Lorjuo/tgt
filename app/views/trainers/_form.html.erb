<%= simple_form_for(@trainer, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthday, :as => :string, :input_html => { data: { behaviour: "datepicker" }} %>
    <%= f.association :training_groups,
      :as => :select,
      :collection => TrainingGroup.order(:name => :asc),
      :label_method => :name,
      :value_method => :id,
      :include_blank => false,
      :input_html => { :class => "chosen input-xlarge"} %>
    <%= f.input :residence %>
    <%= f.input :phone %>
    <%= f.input :email,
      :input_html => { :rows => "3"} %>
    <%= f.input :profession,
      :input_html => { :rows => "3"} %>
    <%= f.input :education,
      :input_html => { :rows => "3"} %>
    <%= f.input :disciplines,
      :input_html => { :rows => "3"} %>
    <%= f.input :activities,
      :input_html => { :rows => "3"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
