<%= simple_form_for(@trainer, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthday %>
    <%= f.input :residence %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :profession %>
    <%= f.input :education %>
    <%= f.input :disciplines %>
    <%= f.input :activities %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
