<%= simple_nested_form_for([@department, @training_group], :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :department,
      :as => :select,
      :collection => Department.all(:order => 'name'),
      :label_method => :name,
      :value_method => :id,
      :include_blank => false,
      :input_html => { :class => "chosen input-xlarge"} %>
    <%= f.association :trainers,
      :as => :select,
      :collection => Trainer.all(:order => 'first_name ASC, last_name ASC'),
      :label_method => :name,
      :value_method => :id,
      :include_blank => false,
      :input_html => { :class => "chosen input-xlarge"} %>
    <%= f.input :age_begin, as: :integer %>
    <%= f.input :age_end, as: :integer %>
    <%= f.input :description, as: :text %>
    <%= f.input :ancient %>
  </div>

  <%= f.fields_for :training_units do |unit_form| %>
    <%= render 'training_unit_fields', f:unit_form %>
  <% end %>
  <p><%= f.link_to_add "Add a TrainingUnit", :training_units %></p>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
