<% content_for :title do %>
  <%= t ".title" %>
<% end %>

<% content_for :buttons do %>
  <%= link_to new_page_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('general.create_model', :model => Page.model_name.human ) %>
  <% end if can? :create, Page %>
<% end %>

<div class="window box">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><%= Page.human_attribute_name(:name) %></th>
        <th><%= Page.human_attribute_name(:department) %></th>
        <th><%= Page.human_attribute_name(:content) %></th>
        <th></th>
        <% if can? :update, Page %>
        <th></th>
        <% end %>
        <% if can? :destroy, Page %>
        <th></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
  <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.department_id %></td>
        <td><%= page.content %></td>
        <td><%= link_to link_to t('general.show'), page %></td>
        <% if can? :update, page %>
        <td><%= link_to link_to t('general.edit'), edit_page_path(page) %></td>
        <% end %>
        <% if can? :destroy, page %>
        <td>
          <%= link_to page, method: :delete, data: { confirm: t('general.are_you_sure')} do %>
            <span class="glyphicon glyphicon-trash"></span>
            <%= t('general.destroy') %>
          <% end %>
        </td>
        <% end %>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>
