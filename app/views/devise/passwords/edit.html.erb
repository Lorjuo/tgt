<div class="window box">
  <h2><%= t('.change_your_password', :default => 'Change your password') %></h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <%#= f.error_notification %>
    <%= f.input :reset_password_token, :as => :hidden %>

    <div class="form-inputs">
      <%= f.input :password, :hint => t('.new_password', :default => "New password") %>

      <%= f.input :password_confirmation, :hint => t('.confirm_new_password', :default => 'Confirm new password') %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-3 col-lg-9">
        <%= f.submit t('.change_my_password', :default => "Change my password"), :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
